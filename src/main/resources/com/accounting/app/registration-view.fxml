<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.accounting.app.controller.RegistrationController">

    <VBox fx:id="registrationView" alignment="CENTER" prefHeight="662.0" prefWidth="914.0" spacing="10">
        <Label style="-fx-font-size: 20px;" text="Create an Account" textAlignment="CENTER" />

        <TextField fx:id="usernameField"
                   maxWidth="200.0"
                   promptText="Username"
                   style="-fx-background-color: #dce1e8; -fx-background-radius: 5;">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></TextField>
        <PasswordField fx:id="passwordField"
                       maxWidth="200.0"
                       promptText="Password"
                       style="-fx-background-color: #dce1e8; -fx-background-radius: 5;">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></PasswordField>
        <PasswordField fx:id="confirmPasswordField"
                       maxWidth="200.0"
                       promptText="Confirm Password"
                       style="-fx-background-color: #dce1e8; -fx-background-radius: 5;">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></PasswordField>

        <Button maxWidth="200.0"
                onAction="#register"
                style="-fx-background-radius: 10;"
                text="Register">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></Button>
      <Button fx:id="backToLoginButton"
              maxWidth="200.0"
              mnemonicParsing="false"
              onAction="#openLoginView"
              style="-fx-background-radius: 10; -fx-background-color: black;"
              text="Back to login page"
              textFill="WHITE">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
    </VBox>
</AnchorPane>
