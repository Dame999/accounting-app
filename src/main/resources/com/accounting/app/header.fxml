<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="header" alignment="CENTER_LEFT" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.accounting.app.controller.HeaderController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <ButtonBar fx:id="headerButtonBar" buttonMinWidth="100.0">
        <buttons>
            <Button fx:id="homeButton" mnemonicParsing="false" onAction="#openHomeView" text="Home" />
            <Button fx:id="addNewProductionLineButton" mnemonicParsing="false" onAction="#openAddNewProductionLineView" text="Production line" />
            <Button fx:id="addEmployeeButton" mnemonicParsing="false" onAction="#openEmployeeView" text="Employees" />
            <Button fx:id="historyButton" alignment="CENTER" mnemonicParsing="false" onAction="#openHistoryView" text="History" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logout" text="Logout" />

        </buttons>
    </ButtonBar>
</HBox>
