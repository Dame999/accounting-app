<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<VBox fx:id="loginView" alignment="CENTER" minHeight="662.0" minWidth="914.0" prefHeight="662.0" prefWidth="914.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.accounting.app.controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Welcome!">
      <font>
         <Font size="25.0" />
      </font>
   </Label>
    <TextField fx:id="usernameField" maxWidth="200.0" minWidth="100.0" opacity="0.5" prefHeight="15.0" promptText="Username" style="-fx-background-color: #dce1e8; -fx-background-radius: 5;">
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </TextField>
    <PasswordField fx:id="passwordField" maxWidth="200.0" opacity="0.5" promptText="Password" style="-fx-background-color: #dce1e8; -fx-background-radius: 5;" />

    <Label fx:id="welcomeText" />
    <Button fx:id="loginButton" maxWidth="200.0" onAction="#login" style="-fx-background-radius: 10;" text="Login" />
    <Button fx:id="createAccountButton" maxWidth="200.0" mnemonicParsing="false" onAction="#openRegistrationPage" style="-fx-background-color: black; -fx-background-radius: 10;" text="Create an account" textFill="WHITE" />
</VBox>
